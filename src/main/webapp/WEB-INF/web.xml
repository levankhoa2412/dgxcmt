<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee                          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>dgxcmt</display-name>
    <welcome-file-list>
        <welcome-file>dangnhap.jsp</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>db_name</param-name>
        <param-value>jdbc/VNPTHISDS</param-value>
    </context-param>
    <context-param>
        <param-name>db_info</param-name>
        <param-value>jdbc/RESTSERVICEDS</param-value>
    </context-param>
    <context-param>
        <param-name>db_report</param-name>
        <param-value>jdbc:oracle:thin:dreport/123@10.82.14.170:1521/PDBTEST1</param-value>
    </context-param>
    <context-param>
        <param-name>rpt_schema</param-name>
        <param-value>DREPORT.</param-value>
    </context-param>
    <context-param>
        <param-name>db_type</param-name>
        <param-value>ORACLE</param-value>
    </context-param>
    <context-param>
        <param-name>report_type</param-name>
        <param-value>JasperReport</param-value>
    </context-param>
    <servlet>
        <servlet-name>RestService</servlet-name>
        <servlet-class>AjaxUtil.RestService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RestService</servlet-name>
        <url-pattern>/RestService</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>xlsDoReportImp</servlet-name>
        <servlet-class>report.servlet.xlsDoReportImp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>xlsDoReportImp</servlet-name>
        <url-pattern>/report/xlsDoReportImp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>spring-mvc</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>spring-mvc</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/spring-mvc-servlet.xml</param-value>
    </context-param>
    <session-config>
        <session-timeout>20</session-timeout>
    </session-config>
    <listener>
        <listener-class>dangnhap.SessionCounterListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
</web-app>
